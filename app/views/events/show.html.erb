<div class="container my-5">
    <h1>Events list</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <%= @event.title %>
            </h5>
            <p class="card-text">
                <%= @event.description %>
            </p>
            <div class="card-text">
                <span class="text-muted">Nombre de participants : </span>
                <%= @event.attendances.size %> 
            </div>
            <div class="card-text">
                <span class="text-muted">Organisateur : </span>
                <%= User.find(@event.organizer_id).email %> 
            </div>
            <div class="card-text">
                <span class="text-muted">Date de début : </span>
                <%= @start_date %>
            </div>
            <div class="card-text">
                <span class="text-muted">Date de fin : </span>
                <%= @end_date %>
            </div>

            <div class="card-text">
                <span class="text-muted">Durée : </span>
                <%= @event.duration %>
            </div>
            <div class="card-text">
                <span class="text-muted">Prix : </span>
                <%= @event.price %>
            </div>
            <div class="card-text">
                <span class="text-muted">Lieu : </span>
                <%= @event.location %>
            </div>
            <p class="mt-3">
                <%= link_to "Accueil", events_path, class: "btn btn-primary" %>
            </p>
        </div>
    </div>
</div>

