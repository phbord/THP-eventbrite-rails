<div class="container my-5">
    <h1>Editer un utilisateur</h1>

    <%# ALERTE %>
    <% flash.each do |type, msg| %>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
    <% end %>

    <p><%= @user.email %></p>

    <%# FORMULAIRE %>
    <%= form_tag admin_user_path, method: "put", multipart: true do %>
        <div class="form-group mt-3">
            <%= check_box_tag :is_admin, class: 'form-check-label mr-2' %>
            <%= label_tag :is_admin, 'Administrateur', class:"form-check-label" %>
        </div>
        <div class="form-group d-flex my-3">
            <%= submit_tag "Envoyer", class: 'btn btn-primary mr-2' %>
            <%= link_to "Accueil", events_path, class: "btn btn-secondary" %>
        </div>
    <% end %>
</div>