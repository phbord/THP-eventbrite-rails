<div class="container my-5">
    <div class="jumbotron">
        <%# ALERTE %>
        <% flash.each do |type, msg| %>
            <div class="alert alert-<%= type %>" role="alert">
                <%= msg %>
            </div>
        <% end %>

        <h1>Dashboard</h1>
        <p class="lead">
            Bienvenue au pays des merveilles, cher(e) "<%= @user.email %>" !
        </p>
        <hr class="my-4">
        <ul class="list-group">
            <% @users.each do |u| %>
                <li class="list-group-item d-flex justify-content-between">
                    <span><%= u.email %></span>
                    <nav class="btn-group" role="group">
                        <%= link_to "Voir", admin_user_path(u.id), method: "get", class: "btn btn-secondary btn-sm" %>
                        <%= link_to "Editer", edit_admin_user_path(u.id), method: "get", class: "btn btn-secondary btn-sm" %>
                        <%= link_to "Supprimer", admin_user_path(u.id), method: "delete", class: "btn btn-secondary btn-sm" %>
                    </nav>
                </li>
            <% end %>
        </ul>

        <%# BOUTONS %>
        <p class="mt-3 d-flex">
            <%= link_to "EvÃ©nements", admin_events_path, method: "get", class: "btn btn-primary mr-2" %>
            <%= link_to "Accueil", events_path, class: "btn btn-secondary" %>
        </p>
    </div>
</div>